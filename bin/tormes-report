seqdata = seqdata[seqdata\$Coverage>90,]
seqdata = seqdata[order(seqdata\$Gene),]
row.names(seqdata)=NULL
if (nrow(seqdata)==0){
  print ("No antibiotic resitance genes from CARD database were found")
