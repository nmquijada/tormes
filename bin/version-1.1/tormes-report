ABargannot = ABargannot[order(ABargannot\$Gene),]
row.names(ABargannot)=NULL
if (nrow(ABargannot)==0){
  print ("No antibiotic resitance genes from ARG-ANNOT database were found")
} else {
kable(ABargannot, results='asis', align="c")
}
\`\`\`

EOF
done

